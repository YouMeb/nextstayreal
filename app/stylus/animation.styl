
@keyframes ballup
	0% {	top: -703px}
	80% {	top:0px}
	100% {	top:-20px}

@keyframes itemleft
	0% {	left: -2000px}
	90% {	left:60px}
	100% {	left:40px}

@keyframes clothright
	0% {	right: -2000px}
	90% {	right:80px}
	100% {	right:52px}

@keyframes topictop
	0% {	top:-100px}
	70% {	top:40px}
	100% {	top:20px}

@keyframes ktlogo
	0% {	opacity:0}
	50% {	opacity: 0}
	100% { opacity: 1}

@keyframes bubblepop
	0% { opacity: 0;margin-top:200px;margin-left:200px}
	60% { opacity: 0;margin-top:200px;margin-left:200px}
	70% { opacity: 1;margin-top:170px;margin-left:77px}
	100% { opacity: 1;margin-top:170px;margin-left:77px}

@keyframes bk 
	0% {	transform: scale(0)}
	100% { transform: scale(1)}

@keyframes sc
	0% {	opacity:0}
	50% {	opacity: 0}
	100% { opacity: 1}

@keyframes top3
	0% {	top:-100px}
	100% { top:0px}

@keyframes rotationthis
	from { transform: rotate(0deg);}
	to { transform: rotate(360deg);}

@keyframes bktrans 
	from {	
		opacity:0
	}
	to {
		opacity:1
	}

